{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<aside class="sidebar announcements">
		<div class="title header"><a href="/announcements"><i class="fa fa-bullhorn"></i> Announcements</a></div>
    <div class="content">
      <ul>
        {% for p in pages.find('/announcements').children.published().order('publish_date', 'desc').slice(0,3) %}
					{% if p.visible %}
          	<li><i class="fa fa-link"></i> <a href="{{p.url}}">{{p.title}}</a></li>
					{% endif %}
        {% endfor %}
      </ul>
    </div>
	</aside>
{% endblock %}
